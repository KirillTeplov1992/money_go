{{template "base" .}}

{{define "title"}}Добавить транзакцию{{end}}

{{define "main"}}
<form action = "/change_transaction" method = "post">
   <label for = "account">Счёт:</label>
   <br>
    <select name = "account">
            <option value = "" desabled selected hidden>Choose</option>
            {{range .AccountList}}
                <option value = {{.ID}}>{{.Name}}</option>
            {{else}}
                <p>Список пуст</p>
            {{end}}
    </select>
    <br>
    <label for = "amount">Сумма:</label>
    <br>
    <input  id = "amount" name = "amount" type = "number" step = "0.01" value = {{.Transaction.Amount}} style = "text-align: right;">
        <select id = "type_of_category" name = "type_of_category">
            <option value = "Расход">Расход</option>
            <option value = "Доход">Доход</option>
            <option value = "Перевод">Перевод</option>
        </select>
    <br>
    <label for ="date">Дата:</label>
    <br>
    <input type ="date" id = "date" name = "date" value = {{.Transaction.Date.Format "2006-01-02"}}>
    <br>
    <label for = "category">Категория:</label>
    <br>
        <select id = "category" name = "category">
            {{range .CategoryList}}
                <option value = "{{.ID}}">{{.Name}}</option>
            {{else}}
                <p>Список пуст</p>
            {{end}}
        </select>
    <br>
    <label for = "comment"> Комментарий:</label>
    <br>
    <textarea id = "comment" name = "comment"></textarea>
    <br>
    <button class = "button" name = "action" value = "add">Добавить</button>
    <button  class = button name = "action" value = "add+">Добавить+</button>
</form>
{{end}}